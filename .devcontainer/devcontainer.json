{
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "FROM_IMAGE": "ghcr.io/aristanetworks/avd/universal",
            "FROM_VARIANT": "python3.11-avd-v4.6.0",
            "USERNAME": "avd",
            "CLAB_VERSION": "${localEnv:CLAB_VERSION}",
            "CV_API_TOKEN": "${localEnv:CV_API_TOKEN}"
        }
    },
    "containerEnv": {
        "ARISTA_TOKEN": "${localEnv:ARTOKEN}"
    },
    "postCreateCommand": "ardl get eos --image-type cEOS --latest --import-docker",
    "customizations": {
        "vscode": {
            "extensions": [
                // git essentials
                "piotrpalarz.vscode-gitignore-generator",
                "mhutchie.git-graph",
                "donjayamanne.githistory",
                // spell checker
                "streetsidesoftware.code-spell-checker",
                // drawio and tldraw
                // excalidraw is pre-installed in universal
                "hediet.vscode-drawio",
                "tldraw-org.tldraw-vscode",
                // markdown
                "yzhang.markdown-all-in-one",
                "bierner.markdown-checkbox",
                "DavidAnson.vscode-markdownlint",
                // various tools
                "tuxtina.json2yaml",
                "mutantdino.resourcemonitor"
            ]
        }
    }
}